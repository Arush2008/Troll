{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Open Troll Website",
			"type": "shell",
			"command": "open",
			"args": [
				"index.html"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Serve Website Locally",
			"type": "shell",
			"command": "python3",
			"args": ["-m", "http.server", "8080"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}